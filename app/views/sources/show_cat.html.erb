<%= render :partial => 'users/loggedin' %>

<h3>Viewing Record</h3>

<div id="details_cat">

<p id="actions">
  <%= link_to "Edit", {:action => 'edit', :id => @source.id} %> |
  <%= link_to "Delete", {:action => 'delete', :id => @source.id}, :confirm => "Are you sure you want to delete this
record permanently?" %>
  </p>

<p id="live">
  <% if @source.live? %>
    This record is viewable by the public. 
    <%= link_to "See public view", {:action => 'show', :id => @source.id} %>
  <% else %>
    This record is hidden from the public.
  <% end %>

<div id="publication">
  <h5>Publication Information</h5>
  <p><span class="label">Modern Editor/Translator: </span>
     <span class="data"><%= @source.editor %></span></p>
  <p><span class="label">Book/Article Title: </span>
     <span class="data"><i><%= @source.title %></i></span></p>
  <p><span class="label">Publication Information: </span>
     <span class="data"><%= @source.publication %>, <%= @source.pub_date %>.</span></p>
  <p><span class="label">ISBN: </span>
     <span class="data"><%= @source.isbn %>:
       <% if @source.isbn %>
         <%= link_to "Find in a library", "http://worldcat.org/isbn/#{@source.isbn}", :popup => true %>
       <% end %></span></p>
  <p><span class="label">Number of pages of primary source text: </span>
     <span class="data"><%= @source.text_pages %></span></p>
  <p><span class="label">Hyperlink: </span>
     <% if @source.link? %>
       <span class="data"><%= link_to "View Source Online", @source.link, :popup => true %></span></p>
     <% end %>
</div>

<div id="text">
  <h5>Original Text Information</h5>
  <p><span class="label">Text name(s): </span>
     <span class="data"><%= @source.text_name %></span></p>
  <p><span class="label">Medieval Author(s): </span>
   <%= render :partial => "authors", :locals => {:source => @source} %>
  </p>
  <p><span class="label">Dates:</span>
     <span class="data"><%= @source.date_begin %> - <%= @source.date_end %></span></p>
  <p><span class="label">Archival Reference: </span>
     <span class="data"><%= @source.archive %></span></p>
  <p><span class="label">Original Language(s): </span>
    <%= render :partial => "languages", :locals => {:source => @source} %>
  </p>
  <p><span class="label">Translation: </span>
     <span class="data">
       <%= render :partial => 'translations', :locals => {:source => @source}  %>
     </span>
  <p><span class="label">Translation Comments: </span>
     <span class="data"><%= @source.trans_comment %></span></p>
</div>

<div id="region">
  <h5>Region Information</h5>
  <p><span class="label">Geopolitical Region(s): </span>
     <%= render :partial => 'countries', :locals => {:source => @source}  %>
  <p><span class="label">County/Region: </span>
     <span class="data"><%= @source.region %></span></p>
</div>

<div id="aids">
<h5>Finding Aids</h5>
  <table width="80%">
    <tr><td valign="top">
      <span class="label">Record Types:<br /> </span>
        <%= render :partial => 'types', :locals => {:source => @source}  %>
    </td><td valign="top">
      <span class="label">Subject Headings:<br /> </span>
        <%= render :partial => 'subjects', :locals => {:source => @source}  %>
  </table>
</div>

<div id="apparatus">
<h5>Apparatus</h5>
  <p><span class="label">Apparatus: </span>
     <span class="data">
       <%= render :partial => 'apparatus', :locals => {:source => @source}  %>
     </span>     
  </p>
  <p><span class="label">Comments: </span>
     <span class="data"><%= @source.comments %></span></p>
  <p><span class="label">Introduction Summary: </span>
     <span class="data"><%= @source.intro_summary %></span></p>
</div>

<div id="cataloger">
  <p><span class="label">Cataloger: </span>
     <span class="data"><%= @source.cataloger %></span>
     <span class="label">My ID: </span>
     <span class="data"><%= @source.my_id %></span></p>
 <p><span class="label">Notes: </span>
     <span class="data"><%= @source.addenda %></span></p>
  <p><span class="label">Record created on:</span>
     <span class="data"><%= @source.created_at %></span>  
     <span class="label">Last updated at:</span>
     <span class="data"><%= @source.updated_at %></span>
</div>


<p id="actions">
  <%= link_to "Edit", {:action => 'edit', :id => @source.id} %> |
  <%= link_to "Delete", {:action => 'delete', :id => @source.id}, :confirm => "Are you sure you want to delete this
record permanently?" %>
  </p>

</div>

</div>
